<?xml version="1.0" encoding="UTF-8"?>
<Parameters xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../schema/fhir-single.xsd">
	<id value="cms-price-check-request-example"/>
	<!--  This example demonstrates a guidance request to implement the CDS-Hooks use case -->
	<parameter>
		<name value="requestId"/>
		<valueString value="cms-price-check-request-id"/>
	</parameter>

	<parameter>
		<name value="context"/>
		<valueCoding>
			<system value="cds-hooks"/>
			<code value="medication-prescribe"/>
		</valueCoding>
	</parameter>
	
	<parameter>
		<name value="inputParameters"/>
		<resource>
			<Parameters>
				<parameter>
					<name value="user"/>
					<valueString value="Practitioner/123"/>
				</parameter>
				<parameter>
					<name value="patient"/>
					<valueId value="example"/>
				</parameter>
				<parameter>
					<name value="encounter"/>
					<valueId value="123"/>
				</parameter>
				<parameter>
					<name value="inputResource"/>
					<resource>
						<MedicationOrder>
							<id value="citalopramPrescription"/>
							<contained>
								<Medication>
									<id value="citalopramMedication"/>
									<code>
										<coding>
											<system value="http://www.nlm.nih.gov/research/umls/rxnorm"/>
											<code value="200371"/>
										</coding>
										<text value="citalopram"/>
									</code>
									<product>
										<form>
											<coding>
												<system value="http://snomed.info/sct"/>
												<code value="385055001"/>
												<display value="Tablet dose form"/>
											</coding>
											<text value="Tablet dose form"/>
										</form>
										<ingredient>
											<item>
												<reference value="#citalopramSubstance"/>
											</item>
											<amount>
												<numerator>
													<value value="20"/>
													<unit value="mg"/>
												</numerator>
												<denominator>
													<value value="1"/>
													<unit value="{tbl}"/>
												</denominator>
											</amount>
										</ingredient>
									</product>
								</Medication>
							</contained>
							<contained>
								<Substance>
									<id value="citalopramSubstance"/>
									<code>
										<coding>
											<system value="http://www.nlm.nih.gov/research/umls/rxnorm"/>
											<code value="2556"/>
										</coding>
										<text value="citalopram"/>
									</code>
								</Substance>
							</contained>
							<medicationReference>
								<reference value="#citalopramMedication"/>
							</medicationReference>
							<dosageInstruction>
								<text value="1 tablet oral 1 time daily"/>
								<timing>
									<repeat>
										<frequency value="1"/>
										<period value="1"/>
										<periodUnits value="d"/>
									</repeat>
								</timing>
								<route>
									<coding>
										<system value="http://snomed.info/sct"/>
										<code value="26643006"/>
										<display value="Oral route (qualifier value)"/>
									</coding>
									<text value="Oral route (qualifier value)"/>
								</route>
								<doseQuantity>
									<value value="1"/>
									<unit value="{tbl}"/>
								</doseQuantity>
							</dosageInstruction>
							<dispenseRequest>
								<numberOfRepeatsAllowed value="3"/>
								<quantity>
									<value value="30"/>
									<unit value="{tbl}"/>
								</quantity>
							</dispenseRequest>
						</MedicationOrder>
					</resource>
				</parameter>
			</Parameters>
		</resource>
	</parameter>
	
</Parameters>